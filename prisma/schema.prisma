generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model MeterReading {
  id        String   @id @default(cuid())
  meterId   String
  name      String
  email     String   @unique
  date      DateTime
  status    Status   @default(ACTIVE)
  price     Float
}

enum Status {
  ACTIVE
  INACTIVE
  CANCELLED
  FAILED
}